@model Reason
@{
  ViewBag.Title = "Add";
}

<h2>Add reason</h2>

<form asp-controller="Reason" asp-action="Add" method="post" class="form-horizontal" role="form">
  <h4>Enter the reason below</h4>
  <hr />
  <div asp-validation-summary="All" class="text-danger"></div>

  <div class="form-group">
    <label asp-for="Text" class="col-md-2 control-label"></label>
    <div class="col-md-10">
      <textarea asp-for="Text" rows="6" class="form-control"></textarea>
      <span asp-validation-for="Text" class="text-danger"></span>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <input type="submit" class="btn btn-primary" value="Add" />
    </div>
  </div>
</form>

<a asp-action="Index" class="btn btn-primary">Cancel</a>
